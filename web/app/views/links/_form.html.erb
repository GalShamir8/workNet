<%= form_for @link do |f| %>
  <% if f.object.errors.any? %>
    <%= puts "IN ERRORS" %>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :link %>
    <%= f.text_field :href, class: "form-control" %>
  </div>
  <div class="form-group">    
    <%= f.hidden_field :company_id, value: @link.company_id %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Link", class: "btn btn-primary" %> <%= link_to "Cancel", :back, class: "btn btn-danger" %>       
  </div>
<% end %>


