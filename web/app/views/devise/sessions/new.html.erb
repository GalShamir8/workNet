<%= stylesheet_link_tag "registration", "data-turbo-track": "reload" %>
<body class="registration">
  <div class="form-container">
    <div class="header">
      <h2>Connect To WorkNet</h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-field">
        <%= form.label :email %>
        <%= form.email_field :email, class: "input-field" %>
      </div>

      <div class="form-field">
        <%= form.label :password %>
        <%= form.password_field :password, class: "input-field" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-field">
          <%= form.check_box :remember_me %>
          <%= form.label :remember_me %>
        </div>
      <% end %>
      <div class="form-actions">
        <%= form.submit "Log in", class: "submit-button" %>
      </div>
    <% end %>
    <div class="footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>