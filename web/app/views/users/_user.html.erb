<%= stylesheet_link_tag "user-profile", "data-turbo-track": "reload" %>
<div id="<%= dom_id user %>">
  <div class="user-profile">
    <div class="header">
      <div class="profile-picture">
        <%= image_tag user.profile_pictures.first.variant(resize: "200x200"),
        class: "rounded-circle img-responsive" if
        user.profile_pictures.attached? %>
      </div>
      <div class="header-details d-flex p-2 bd-highlight">
        <h2><%= user.first_name %> <%= user.last_name %></h2>
      </div>
    </div>
    <div class="profile-details">
      <div class="user-info">
        <div class="field">
          <label>Email:</label>
          <p><%= user.email %></p>
        </div>
        <div class="field">
          <label>Role:</label>
          <p><%= user.role %></p>
        </div>
        <div class="field">
          <label>Team:</label>
          <p><%= user.team&.name %></p>
        </div>
        <div class="field">
          <label>Department:</label>
          <p><%= user.department&.name %></p>
        </div>
        <div class="field">
          <label>Age:</label>
          <p><%= user.age %></p>
        </div>
        <div class="field">
          <label>Birth Date:</label>
          <p><%= user.birth_date&.strftime("%d/%m/%Y") %></p>
        </div>
      </div>
    </div>
    <% if current_user?(user) %>
      <%= button_to(edit_user_registration_path, class: 'btn-edit btn', method: :get) do %>
        Edit user <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
    <% end %>
  </div>
</div>
