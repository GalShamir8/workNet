<%= form_for @post, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :attachments %>
    <%= f.file_field :attachments, multiple: true, class: "form-control", onchange: "previewImages(this);" %>
    <div class="preview"></div>
  </div>
  <div class="form-group">
    <%= f.submit "Create Post", class: "btn btn-primary" %> <%= link_to "Cancel", :back, class: "btn btn-danger" %>       
  </div>
<% end %>


